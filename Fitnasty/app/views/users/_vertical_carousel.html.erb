<% @non_friends = User.all.select {|follow| follow.followers.exclude?(user)} %>

<div id="vbar-div">
  <div class="row-fluid">
    <div class="span6 offset3">
      <div id="myCarousel" class="carousel slide vertical">
          <!-- Carousel items -->

          <!-- Carousel nav -->
          <a id="vbar-control-left" class="carousel-control left" href="#myCarousel" data-slide="prev">‹</a>
          <a id="vbar-control-right" class="carousel-control right" href="#myCarousel" data-slide="next">›</a>

          <div class="carousel-inner">
              <div class="active item">
                  <%= render partial: 'vert_bar_user_info', locals: {user: @non_friends[0]} %>
              </div>
              <div class="item">
                  <%= render partial: 'vert_bar_user_info', locals: {user: @non_friends[1]} %>
              </div>
              <div class="item">
                  <%= render partial: 'vert_bar_user_info', locals: {user: @non_friends[2]} %>
              </div>
          </div>

      </div>
    </div>
  </div>
</div>