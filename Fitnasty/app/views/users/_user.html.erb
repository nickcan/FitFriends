<div class="user">
  <div class="profile_pic_thumbnail_container">
    <img class="profile_pic_thumbnail" src="http://simpleicon.com/wp-content/uploads/user1.png">
  </div>

  <div class="user_info">
      <%= link_to "#{user.first_name} #{user.last_name}", user %></a><br>
      <span>Challenges completed: <%= user.user_challenges.where(completed?: true).count %></span><br>
      <span>Accepted challenges: <%= user.user_challenges.where(accepted?: true, completed?: false).count %>
      </span>
      <br>

      <% @follower_ids = user.followers.select(:id).map(&:id) %>
      <% if @follower_ids.include?(current_user.id) %>
        <div class='unfollow'>
          <%= link_to 'unfollow', "/users/unfollow/#{user.id}", class: "unfollow_link" %>
        </div>
        <% else %>
        <div class='follow'>
          <%= link_to 'follow', "/users/follow/#{user.id}", class: "follow_link"%>
        </div>
      <% end %>
  </div>

</div>