<div class="followers">
  <form id="user_search">
    <input type="search" id="user_search_input", placeholder="search for users">
  </form>
  <p>People following
    <% if current_user.id == user.id %>
      <%= "you" %>
    <% else %>
      <%= user.first_name %>
    <% end %>
  </p>
  <% user.followers.each do |follower| %>
    <%= render partial: 'user', locals: {user: follower} %>
  <% end %>
</div>
<div class="followees">
  <p>People
    <% if current_user.id == user.id %>
      <%= "you're following" %>
    <% else %>
      <%= "#{user.first_name}  is following" %>
    <% end %>
  </p>
  <% user.followees.each do |followee| %>
    <%= render partial: 'user', locals: {user: followee} %>
  <% end %>
</div>