<% if user_challenge.completed? == true %>
		<div class="float-left">
			<h3><%= link_to "#{user.first_name} #{user.last_name}", user %></a>
		completed: </h3>
			<h1><%=challenge.title%></h1>
		</div> 
		<div class="float-right">
			<img class="activity_challenge_image" src="<%=challenge.image_url%>" height="150" width="150">
		</div>
	</div>

<% else %>

	<div class="activity-challenge">
		<div class="float-left">
			<h3><%= link_to "#{user.first_name} #{user.last_name}", user %></a>
		accepted: </h3>
			<h1><%=challenge.title%></h1>
		</div> 
		<div class="float-right">
			<img class="activity_challenge_image" src="<%=challenge.image_url%>" height="150" width="150">
		</div>

<% end %>