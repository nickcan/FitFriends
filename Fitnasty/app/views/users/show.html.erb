<header id="top-nav">
  <div class="sign_out_div">
    <a href="<%=log_out_path%>" class="signout_button">Sign Out</a>
  </div>
  <form id="search-form">
    <input id="search" type="text" name="query" placeholder="Search for challenges">
  </form>
  <div id="brand">FitNasty</div>
</header>


<main class="profile_container">
  <div class="left-nav">
  <section id="profile-image-container avatar">
    <img class='profile_image' src="http://simpleicon.com/wp-content/uploads/user1.png">
  </section>
    <h1><%="#{@user.first_name} #{@user.last_name}" %></h1>

    <section id="trends-container">
      <h3>Trends</h3>
      <ul>

      </ul>
    </section>
  </div>

  <!-- Tabs -->
  <div id="tabs">
    <ul class="tabs_list">
      <li class="tab" id = "challenges_tab"><a href="/users/<%= params[:id] %>/accepted">challenges</a></li>
      <li class="tab" id="users_tab"><a id="user_tab" href="#users">users</a></li>
    </ul>

    <div class="tab_area" id="challenges">
      <section id="challenges-container">
        <button class="test_show">Create Challenge</button>
        <button id = "most_recent"> Recent Challenges</button>
        <button id = "trending"> Trending Challenges</button>
        <div>
          
        </div>
      </section>
    </div>

    <div class="tab_area" id="users">
      <%= render :partial => 'follow', locals: {user: @user} %>
      <section id="users-container">
        <h3>USERS</h3>
      </section>
      <div class="followers">
        <form id="user_search">
          <input type="search", placeholder="search for users">
        </form>
        <p>followers</p>
        <% @user.followers.each do |follower| %>
          <%= render partial: 'user', locals: {user: follower} %>
        <% end %>
      </div>
      <div class="followees">
        <p>following</p>
        <% @user.followees.each do |followee| %>
          <%= render partial: 'user', locals: {user: followee} %>
        <% end %>
      </div>
    </div>
  </div>
</main>